{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "replace",
  "automerge": false,
  "dependencyDashboardTitle": "ðŸ“¦ Dependency Dashboard",
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "timezone": "Europe/Paris",
  "schedule": ["after 10pm and before 6:00am"],
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false,
      "excludePackagePrefixes": ["houdini", "@kitql"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "prPriority": -1
    },
    {
      "groupName": "KitQL",
      "matchPackagePrefixes": "@kitql"
    },
    {
      "groupName": "Houdini",
      "matchPackagePrefixes": "houdini"
    },
    {
      "groupName": "Svelte",
      "matchPackagePrefixes": ["@sveltejs", "svelte-check", "svelte"]
    },
    {
      "groupName": "Tailwind",
      "matchPackagePrefixes": [
        "@tailwindcss",
        "tailwindcss",
        "tailwind-scrollbar"
      ]
    },
    {
      "groupName": "Envelop",
      "matchPackagePrefixes": "@envelop"
    },
    {
      "groupName": "prettier_eslint",
      "matchPackagePrefixes": [
        "@trivago/prettier-plugin-sort-imports",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "eslint",
        "eslint-config-prettier",
        "eslint-plugin-unused-imports",
        "prettier",
        "prettier-plugin-svelte"
      ]
    },
    {
      "groupName": "Icon",
      "matchPackagePrefixes": ["unplugin-icons", "@iconify/json"]
    },
    {
      "groupName": "vitest",
      "matchPackagePrefixes": ["vitest", "@vitest"]
    }
  ]
}
