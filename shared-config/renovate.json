{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "rangeStrategy": "replace",
  "automerge": false,
  "dependencyDashboardTitle": "ðŸ“¦ Dependency Dashboard",
  "baseBranches": ["main"],
  "labels": ["dependencies"],
  "timezone": "Europe/Paris",
  "schedule": ["after 10pm and before 6:00am"],
  "lockFileMaintenance": { "enabled": true },
  "packageRules": [
    {
      "matchUpdateTypes": ["patch"],
      "enabled": false,
      "excludePackagePrefixes": ["houdini", "@kitql"]
    },
    {
      "matchDepTypes": ["devDependencies"],
      "prPriority": -1
    },
    {
      "groupName": "JYC_KitQL",
      "matchPackagePrefixes": "@kitql"
    },
    {
      "groupName": "JYC_Houdini",
      "matchPackagePrefixes": "houdini"
    },
    {
      "groupName": "JYC_sSvelte",
      "matchPackagePrefixes": ["@sveltejs", "svelte-check", "svelte"]
    },
    {
      "groupName": "JYC_Tailwind",
      "matchPackagePrefixes": [
        "@tailwindcss",
        "tailwindcss",
        "tailwind-scrollbar"
      ]
    },
    {
      "groupName": "JYC_Envelop",
      "matchPackagePrefixes": "@envelop"
    },
    {
      "groupName": "JYC_prettier",
      "matchPackagePrefixes": [
        "prettier",
        "prettier-plugin-svelte",
        "@trivago/prettier-plugin-sort-imports"
      ]
    },
    {
      "groupName": "JYC_Icon",
      "matchPackagePrefixes": ["unplugin-icons", "@iconify/json"]
    }
  ]
}
